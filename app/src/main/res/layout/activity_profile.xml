<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.sh.storiezz.profile.ProfileActivity"
    android:background="#ffffff">


    <include
        android:id="@+id/profile_page_toolbar"
        layout="@layout/app_bar_layout" />


    <FrameLayout
        android:id="@+id/profile_frame"
        android:layout_below="@+id/profile_page_toolbar"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        />


    <android.support.design.widget.TabLayout
        android:id="@+id/profile_tabs"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/profile_frame"
        android:theme="@style/ThemeOverlay.AppCompat.ActionBar"
        android:background="@color/background_light_gray"
        app:tabSelectedTextColor="@color/colorAccent" />

    <android.support.v4.view.ViewPager
        android:id="@+id/profile_pager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_below="@id/profile_tabs"
        >

    </android.support.v4.view.ViewPager>


</RelativeLayout>
